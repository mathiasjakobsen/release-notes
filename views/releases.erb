<title>Release Notes</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="github-markdown.css" type="text/css" />

<style>
    body {
      margin: 0;
      padding: 0;
    }

    .break {
        width: 100%;
        height: 1px;
        background: rgb(200, 200, 200);
        display: block;
    }
	.markdown-body {
		box-sizing: border-box;
		min-width: 200px;
		max-width: 980px;
		margin: 0 auto;
		padding: 45px;
	}

	@media (max-width: 767px) {
		.markdown-body {
			padding: 15px;
		}
	}
</style>

<% releases.map do |release| %>
  <article class="markdown-body" id="<%= release[:title] %>">
    <a href="#<%= release[:title] %>">
      <h5><%= release[:published_at] %></h5>
    </a>
    <div><%= release[:html] %></div>
  </article>

  <div class="break"></div>
<% end %>
